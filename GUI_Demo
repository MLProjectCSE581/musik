from tkinter import *

root = Tk()
root.title("musik")

frame = Frame(root)
frame.pack()

bottomframe = Frame(root)
bottomframe.pack( side = BOTTOM )

Id= StringVar()
def person():
    #print("Hello")
    entry =Id.get()
    #Got The User Id in "entry" Perform ML

    #Show output From here
    #print(entry)
    root2 = Tk()
    root2.title("musik")

    #show User Id At Top
    L1 = Label(root2, text=entry, font=(" Comic Sans MS", 15, "bold", "underline"), relief="sunken")
    L1.pack(side=TOP)

    #Output For perticuler User
    #There'll be 3 lists under "root2"
    #"Only For You","Populer Songs","All Songs"
    Lst = Listbox(root2)
    Lst.pack(side=LEFT, fill=Y)
    #Can be inserted in loop also
    Lst.insert(1,"Hello")
    Lst.insert(2,entry)
    
    Lst1 = Listbox(root2)
    Lst1.pack(side=LEFT, fill=Y)
    
    Lst2 = Listbox(root2)
    Lst2.pack(fill=X)
    
    root.destroy()
    root2.mainloop()

button = Button(frame, text="Dig In",  font=("Times", 12, "bold"), bg= 'SkyBlue' , command= person )
button.pack( side = RIGHT )

entry_1=Entry(frame,textvariable= Id, bd=5, font= ("Times", 15, "bold") )
entry_1.pack()

#output of First Page
#All Songs and Hit Songs
List1= Listbox(root)
List1.pack(side= LEFT,fill=Y)
List2= Listbox(root)
List2.pack(side=RIGHT, fill=Y)
root.mainloop()
